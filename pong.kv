#:kivy 1.10.0

# Binds the PongGame class to this KV Widget definition
<PongGame>:
    # Define a property populated by some object with ID of pong_ball
    ball: pong_ball
    player1: player_left
    player2: player_right

    # canvas is used for drawing using shapres, rather than predefined objects
    canvas:
        Rectangle:
            # pos is short for position
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

    # A child object that is of the PongBall class
    PongBall:
        # Create an ID for use elsewhere, in our case, as a property
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y

# This is the visual part of the ball
<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
