ScreenManager:
    timer: timer

    Screen:
        name: 'main_screen'
        manager: root

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.1)

                Label:
                    text: 'Pomodoro!'
                    size_hint: (0.75, 1)

                Button:
                    text: 'Help'
                    on_press: root.current = 'help_screen'
                    size_hint: (0.25, 1)

            TimerVisual:
                size_hint: (1, 0.7)
                id: timer

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.1)

                Button:
                    text: 'Start Timer'
                    size_hint: (0.3, 1)
                    on_press: root.timer.start_timer()

                Button:
                    text: 'Stop Timer'
                    size_hint: (0.3, 1)
                    on_press: root.timer.stop_timer()

                Button:
                    text: 'Reset Timer'
                    size_hint: (0.3, 1)
                    on_press: root.timer.reset_timer()


    Screen:
        name: 'help_screen'
        manager: root

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Back'
                on_press: root.current = 'main_screen'
                size_hint: (0.15, 0.1)

            Label:
                text: 'Help goes here'
                size_hint: (1, 0.9)

<TimerVisual>:
    text: str(int(root.seconds/60)).zfill(2) + ':' + str(root.seconds%60).zfill(2)
    font_size: '200sp'
    color: (0,0,0,1)
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: root.pos
            size: root.size
